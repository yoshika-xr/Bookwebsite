<%- include("partials/header.ejs") %>
<h2 class="wishlist-tit">Your Wishlist</h2>
<div class="wishlist-container">
  <% books.forEach(book => { %>
    <div class="wishlist-card">
      <img src="<%= book.image %>" width="100" class="wishlist-img">
      <h3><%= book.title %></h3>
      <p><strong>Author:</strong> <%= book.author %></p>
      <p><strong>Score:</strong> <%= book.score %></p>
      <p><strong>Why you liked it:</strong> <%= book.reason %></p>
      <p><strong>Would recommend:</strong> <%= book.recommend %></p>
      <a href="/deletefav/<%= encodeURIComponent(book.id) %>">
        <button class="delete-btn">🗑️ Remove</button>
      </a>
    </div>
  <% }); %>
</div>


